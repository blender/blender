#!/usr/bin/python
Import ('env')

sources = 'CcdPhysicsEnvironment.cpp CcdPhysicsController.cpp'

incs = '. ../common'

incs += ' ' + env['BF_BULLET_INC']

cflags = []
if env['OURPLATFORM']=='win32-vc':
	cflags.append('/GR')
	cflags.append('/O2')

env.BlenderLib ( 'bf_bullet', Split(sources), Split(incs), [], libtype=['game','player'], priority=[15,80] )
