#!/usr/bin/python
Import ('env')

sources = env.Glob('*.cpp')

incs = '. #source/kernel/gen_system #intern/string #source/gameengine/Ketsji'
incs += ' #source/gameengine/GameLogic #source/gameengine/Expressions'
incs += ' #source/gameengine/Network'

incs += ' ' + env['BF_PYTHON_INC']

cxxflags = []
if env['OURPLATFORM']=='win32-vc':
	cxxflags.append ('/GR')
	cxxflags.append ('/O2')


env.BlenderLib ( 'kx_network', Split(sources), Split(incs), defines=[],libtype=['core', 'player'], priority=[400, 145], cxx_compileflags=cxxflags )
